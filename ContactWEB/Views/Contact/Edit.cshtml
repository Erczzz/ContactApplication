@model ContactWEB.Model.Contact

@{
    ViewData["Title"] = "Edit";
}
<div class="background-overlay"></div>
<h5 id="EditH5">EDIT CONTACT</h5>
<hr />
<div class="container" id="EditContainer">
    <div >
        <form asp-action="Edit">
            <input type="hidden" asp-for="ContactId" />
            <div class="form-group">
                <label class="control-label">First Name</label> <span asp-validation-for="FirstName" class="text-danger"></span>
                <input asp-for="FirstName" class="form-control" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Last Name</label> <span asp-validation-for="LastName" class="text-danger"></span>
                <input asp-for="LastName" class="form-control" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Contact Number</label> <span asp-validation-for="ContactNo" class="text-danger"></span>
                <input asp-for="ContactNo" class="form-control" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Email Address</label> <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Relation" class="control-label"></label> <span asp-validation-for="Relation" class="text-danger"></span>
                <input asp-for="Relation" class="form-control" />
                
            </div>

                <div class="form-group">
                    <input type="submit" style="width: 100%; margin-top: 5px;" value="SAVE" class="btn btn-dark" />
                </div>
                <div>
                    <a class="btn btn-danger" style="width: 100%; margin-top: 5px;" asp-action="GetAllContacts">CANCEL</a>
                </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
